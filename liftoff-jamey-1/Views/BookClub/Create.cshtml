@model BookClub

<form method="post">
    <div class="boarder p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create A Book Club</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for=ClubName></label>
            <input asp-for=ClubName class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Location"></label>
            <input asp-for="Location" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="BookClub" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to club list
        </a>
    </div>
</form>

